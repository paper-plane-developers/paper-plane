{
    "app-id": "com.github.melix99.telegrand.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "telegrand",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=network",
        "--device=dri",
        "--talk-name=org.a11y.Bus",
        "--env=RUST_LOG=telegrand=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ]
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "libsass",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/libsass.git",
                    "branch": "meson"
                }
            ]
        },
        {
            "name": "sassc",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/sassc.git",
                    "branch": "meson"
                }
            ]
        },
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "config-opts": [
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch": "main"
                }
            ]
        },
        {
            "name": "tdlib",
            "buildsystem": "simple",
            "build-commands": [
                "install -D libtdjson.so.* /app/lib",
                "ln -sf /app/lib/libtdjson.so.* /app/lib/libtdjson.so",
                "install -D pkgconfig/* /app/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/melix99/tdlib-ci/releases/download/v1.7.0/tdlib.zip",
                    "sha256": "95b079228b17c2e6d54aa4252a6ac790e230fe61764710bb5a932afd5ba90826"
                }
            ]
        },
        {
            "name": "telegrand",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
